<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#FFD54F" /> <!-- Yellow-ish border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Inner spacing -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
